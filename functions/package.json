{
  "name": "@anhzf/evote-functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts --fix .",
    "compile": "tsc --noEmit && esbuild src/index.ts --outfile=dist/index.js --bundle --platform=node --target=node18 --external:firebase-admin --external:firebase-functions",
    "build:watch": "npm run compile --watch",
    "build": "npm run compile --minify",
    "dev": "npm run build:watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "dist/index.js",
  "dependencies": {
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.4.1"
  },
  "devDependencies": {
    "@anhzf/evote-shared": "file:../packages/shared",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.52.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.28.1",
    "firebase-functions-test": "^3.1.0",
    "nanoid": "^5.0.2",
    "typescript": "^5.2.2"
  },
  "private": true,
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anhzf/evote.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/anhzf/evote/issues"
  },
  "homepage": "https://github.com/anhzf/evote#readme",
  "description": ""
}